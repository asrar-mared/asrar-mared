# 🌍 Environment Configuration
# انسخ هذا الملف إلى .env وغير القيم حسب بيئتك

# 🚀 Application Settings
NODE_ENV=development
PORT=3000
API_VERSION=v1
APP_NAME="Professional API"
APP_URL=http://localhost:3000

# 🔐 Security Keys
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=32-character-encryption-key-here
API_KEY=your-api-key-for-external-services

# 📊 Database Configuration
# MongoDB
MONGO_URL=mongodb://localhost:27017/professional-api
MONGO_USER=
MONGO_PASSWORD=
MONGO_DB_NAME=professional_api

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# 📧 Email Service (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@yourcompany.com
FROM_NAME="Professional API"

# 📱 SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ☁️ Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket

# 🔍 External APIs
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# 📊 Monitoring & Analytics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_URL=http://localhost:3001
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# 🔒 Security Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
MAX_REQUEST_SIZE=10mb
SESSION_SECRET=your-session-secret-key
COOKIE_SECURE=false
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# 📂 File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# 🐛 Debugging
DEBUG=api:*
LOG_LEVEL=info
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true

# 🐳 Docker Configuration
DOCKER_PORT=3000
DOCKER_ENV=development

# 🚀 Production Settings
PM2_INSTANCES=max
PM2_EXEC_MODE=cluster
CLUSTER_WORKERS=0

# 🔔 Notifications
PUSH_NOTIFICATION_KEY=your-push-notification-key
SLACK_WEBHOOK_URL=your-slack-webhook-url
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# 💳 Payment Gateways
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# 🌐 CDN & Assets
CDN_URL=https://cdn.yourcompany.com
STATIC_FILES_URL=https://static.yourcompany.com
IMAGES_BASE_URL=https://images.yourcompany.com

# 📈 Performance
CACHE_TTL=3600
SESSION_TTL=86400
TOKEN_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d

# 🔧 Development Tools
MOCK_EXTERNAL_APIS=false
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
AUTO_MIGRATE_DB=false
