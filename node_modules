  workflow_dispatch:
  schedule:
    # Ø§Ø®ØªØ¨Ø§Ø± Ø£Ø³Ø¨ÙˆØ¹ÙŠ ÙƒÙ„ ÙŠÙˆÙ… Ø§Ø«Ù†ÙŠÙ† Ø§Ù„Ø³Ø§Ø¹Ø© 3 ØµØ¨Ø§Ø­Ø§Ù‹
    - cron: '0 3 * * 1'

# Ù…Ù†Ø¹ ØªØ´ØºÙŠÙ„ workflow Ù…ÙƒØ±Ø±
concurrency:
  group: ${{ github.workflow }}-${{ github.ref }}
  cancel-in-progress: true

# Ø§Ù„Ø£Ø°ÙˆÙ†Ø§Øª Ø§Ù„Ù…Ø·Ù„ÙˆØ¨Ø©
permissions:
  contents: read
  pull-requests: write
  checks: write
  security-events: write

