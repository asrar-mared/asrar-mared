  NODE_ENV: production
  CI: true

jobs:
  # ===================================
  # Ø§Ù„ÙØ­ÙˆØµØ§Øª Ø§Ù„Ø£ÙˆÙ„ÙŠØ©
  # ===================================
  pre-checks:
    name: ğŸ” Pre-flight Checks
    runs-on: ubuntu-latest
    timeout-minutes: 5
    
    steps:
      - name: ğŸ“¥ Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: ğŸ” Check for package.json
        run: |
          if [ ! -f "package.json" ]; then
            echo "âŒ Error: package.json not found"
            exit 1
          fi
          echo "âœ… package.json found"

      - name: ğŸ” Check for webpack config
        run: |
          if [ ! -f "webpack.config.js" ] && [ ! -f "webpack.config.ts" ]; then
            echo "âš ï¸ Warning: No webpack config found"
          else
            echo "âœ… Webpack config found"
          fi

      - name: ğŸ“Š Check file changes
        id: changes
        uses: dorny/paths-filter@v3
        with:
          filters: |
            source:
              - 'src/**'
              - 'package*.json'
              - 'webpack.config.*'

  # ===================================
  # ØªØ«Ø¨ÙŠØª Ø§Ù„ØªØ¨Ø¹ÙŠØ§Øª Ùˆ Cache
  # ===================================
  install:
    name: ğŸ“¦ Install Dependencies
    runs-on: ubuntu-latest
    needs: pre-checks
    timeout-minutes: 10
    
    strategy:
      matrix:
        node-version: [18.x, 20.x, 22.x]
    
    steps:
      - name: ğŸ“¥ Checkout code
        uses: actions/checkout@v4

      - name: ğŸŸ¢ Setup Node.js ${{ matrix.node-version }}
        uses: actions/setup-node@v4
        with:
          node-version: ${{ matrix.node-version }}
          cache: 'npm'
          cache-dependency-path: package-lock.json

      - name: ğŸ“Š Cache node_modules
        id: cache-node-modules
        uses: actions/cache@v4
        with:
          path: node_modules
          key: ${{ runner.os }}-node-${{ matrix.node-version }}-${{ hashFiles('**/package-lock.json') }}
          restore-keys: |
            ${{ runner.os }}-node-${{ matrix.node-version }}-
            ${{ runner.os }}-node-

      - name: ğŸ“¦ Install dependencies
        if: steps.cache-node-modules.outputs.cache-hit != 'true'
        run: |
          npm ci --prefer-offline --no-audit
          echo "âœ… Dependencies installed successfully"

      - name: ğŸ” Check for vulnerabilities
        run: |
          npm audit --audit-level=high || true
          echo "âœ… Vulnerability check completed"

  # ===================================
  # Linting ÙˆØ§Ù„ØªØ­Ù‚Ù‚ Ù…Ù† Ø§Ù„Ø¬ÙˆØ¯Ø©
  # ===================================
  lint:
    name: ğŸ” Code Quality & Linting
    runs-on: ubuntu-latest
    needs: install
    timeout-minutes: 10
    
    strategy:
      matrix:
        node-version: [20.x]
    
    steps:
      - name: ğŸ“¥ Checkout code
        uses: actions/checkout@v4

      - name: ğŸŸ¢ Setup Node.js ${{ matrix.node-version }}
        uses: actions/setup-node@v4
        with:
          node-version: ${{ matrix.node-version }}
          cache: 'npm'

      - name: ğŸ“Š Restore cache
        uses: actions/cache@v4
        with:
          path: node_modules
          key: ${{ runner.os }}-node-${{ matrix.node-version }}-${{ hashFiles('**/package-lock.json') }}

      - name: ğŸ“¦ Install if cache miss
        run: npm ci --prefer-offline --no-audit

      - name: ğŸ” Run ESLint
        run: |
          npm run lint || echo "âš ï¸ Lint warnings found"
        continue-on-error: true

      - name: ğŸ¨ Check code formatting
        run: |
          if [ -f ".prettierrc" ] || [ -f ".prettierrc.json" ]; then
            npx prettier --check "src/**/*.{js,jsx,ts,tsx}" || echo "âš ï¸ Formatting issues found"
          else
            echo "âš ï¸ No Prettier config found, skipping"
          fi
        continue-on-error: true

      - name: ğŸ”’ Run security audit
        run: |
          npm audit --audit-level=moderate
        continue-on-error: true

  # ===================================
  # Ø§Ù„Ø§Ø®ØªØ¨Ø§Ø±Ø§Øª
  # ===================================
  test:
    name: ğŸ§ª Run Tests
    runs-on: ubuntu-latest
    needs: lint
    timeout-minutes: 15
    
    strategy:
      matrix:
        node-version: [18.x, 20.x, 22.x]
    
    steps:
      - name: ğŸ“¥ Checkout code
        uses: actions/checkout@v4

      - name: ğŸŸ¢ Setup Node.js ${{ matrix.node-version }}
        uses: actions/setup-node@v4
        with:
          node-version: ${{ matrix.node-version }}
          cache: 'npm'

      - name: ğŸ“Š Restore cache
        uses: actions/cache@v4
        with:
          path: node_modules
          key: ${{ runner.os }}-node-${{ matrix.node-version }}-${{ hashFiles('**/package-lock.json') }}

      - name: ğŸ“¦ Install if cache miss
        run: npm ci --prefer-offline --no-audit

      - name: ğŸ§ª Run unit tests
        run: |
          if grep -q "\"test\":" package.json; then
            npm test -- --coverage --maxWorkers=2
          else
            echo "âš ï¸ No test script found in package.json"
          fi
        continue-on-error: true

      - name: ğŸ“Š Upload coverage reports
        if: matrix.node-version == '20.x'
        uses: codecov/codecov-action@v4
        with:
          token: ${{ secrets.CODECOV_TOKEN }}
          files: ./coverage/coverage-final.json
          flags: unittests
          name: codecov-${{ matrix.node-version }}
        continue-on-error: true

  # ===================================
  # Ø§Ù„Ø¨Ù†Ø§Ø¡ Ù…Ø¹ Webpack
  # ===================================
  build:
    name: ğŸ—ï¸ Build with Webpack
    runs-on: ubuntu-latest
    needs: test
    timeout-minutes: 20
    
    strategy:
      matrix:
        node-version: [18.x, 20.x, 22.x]
    
    steps:
      - name: ğŸ“¥ Checkout code
        uses: actions/checkout@v4

      - name: ğŸŸ¢ Setup Node.js ${{ matrix.node-version }}
        uses: actions/setup-node@v4
        with:
          node-version: ${{ matrix.node-version }}
          cache: 'npm'

      - name: ğŸ“Š Restore cache
        uses: actions/cache@v4
        with:
          path: node_modules
          key: ${{ runner.os }}-node-${{ matrix.node-version }}-${{ hashFiles('**/package-lock.json') }}

      - name: ğŸ“¦ Install if cache miss
        run: npm ci --prefer-offline --no-audit

      - name: ğŸ”§ Cache webpack build
        uses: actions/cache@v4
        with:
          path: |
            .cache
            dist
            build
          key: webpack-build-${{ runner.os }}-${{ matrix.node-version }}-${{ hashFiles('**/webpack.config.*') }}
          restore-keys: |
            webpack-build-${{ runner.os }}-${{ matrix.node-version }}-
            webpack-build-${{ runner.os }}-

      - name: ğŸ—ï¸ Build with Webpack
        run: |
          echo "ğŸš€ Starting webpack build..."
          NODE_ENV=production npx webpack --mode production --config webpack.config.js
          echo "âœ… Build completed successfully"

      - name: ğŸ“Š Analyze bundle size
        run: |
          if [ -f "dist/bundle.js" ] || [ -f "build/bundle.js" ]; then
            echo "ğŸ“¦ Bundle size analysis:"
            du -sh dist/* 2>/dev/null || du -sh build/* 2>/dev/null || echo "No build output found"
          fi

      - name: ğŸ” Check build artifacts
        run: |
          if [ -d "dist" ]; then
            echo "âœ… Build artifacts found in dist/"
            ls -lah dist/
          elif [ -d "build" ]; then
            echo "âœ… Build artifacts found in build/"
            ls -lah build/
          else
            echo "âŒ No build output directory found"
            exit 1
          fi

      - name: ğŸ“¤ Upload build artifacts
        if: matrix.node-version == '20.x'
        uses: actions/upload-artifact@v4
        with:
          name: webpack-build-node-${{ matrix.node-version }}
          path: |
            dist/
            build/
          retention-days: 7
          if-no-files-found: warn

  # ===================================
  # Ø§Ù„ÙØ­Øµ Ø§Ù„Ø£Ù…Ù†ÙŠ
  # ===================================
  security-scan:
    name: ğŸ” Security Scanning
    runs-on: ubuntu-latest
    needs: build
